{
  "name": "django-template-extension",
  "displayName": "Django/Jinja Template Support",
  "version": "1.0.0",
  "main": "dist/extension.js",
  "publisher": "jraylan",
  "author": "jraylan",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jraylan/seamless-agent.git"
  },
  "homepage": "https://github.com/jraylan/seamless-agent#readme",
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -w -p ./",
    "vscode:prepublish": "npm run compile",
    "package": "vsce package",
    "test": "npm run compile && node ./out/test/runTest.js"
  },
  "keywords": [
    "django",
    "jinja",
    "jinja2",
    "template",
    "python",
    "html"
  ],
  "license": "MIT",
  "engines": {
    "vscode": "^1.78.0"
  },
  "categories": [
    "Programming Languages",
    "Formatters"
  ],
  "activationEvents": [
    "onLanguage:django-html",
    "onLanguage:html",
    "onLanguage:javascript",
    "onLanguage:typescript",
    "onLanguage:xml",
    "workspaceContains:**/templates/**",
    "workspaceContains:**/template/**"
  ],
  "contributes": {
    "languages": [
      {
        "id": "django-html",
        "aliases": [
          "Django HTML",
          "Jinja HTML"
        ],
        "extensions": [
          ".djhtml",
          ".django",
          ".jinja",
          ".jinja2",
          ".j2"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "django-html",
        "scopeName": "text.html.django",
        "path": "./syntaxes/django-html.tmLanguage.json",
        "embeddedLanguages": {
          "source.js": "javascript",
          "source.css": "css"
        }
      },
      {
        "scopeName": "source.django.injection",
        "path": "./syntaxes/django-injection.tmLanguage.json",
        "injectTo": [
          "text.html.basic",
          "text.html.derivative",
          "source.js",
          "source.ts",
          "text.xml"
        ]
      }
    ],
    "commands": [
      {
        "command": "djangoTemplateExtension.setAsDjangoHTML",
        "title": "Set as Django/Jinja HTML",
        "category": "Django Template"
      },
      {
        "command": "djangoTemplateExtension.wrapDjangoTags",
        "title": "Wrap Django tags with /* */",
        "category": "Django Template"
      },
      {
        "command": "djangoTemplateExtension.unwrapDjangoTags",
        "title": "Unwrap Django tags (remove /* */)",
        "category": "Django Template"
      },
      {
        "command": "djangoTemplateExtension.toggleTagWrapping",
        "title": "Toggle auto wrap/unwrap Django tags",
        "category": "Django Template"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "djangoTemplateExtension.setAsDjangoHTML",
          "when": "editorLangId == html",
          "group": "1_modification"
        }
      ]
    },
    "configuration": {
      "title": "Django Template Extension",
      "properties": {
        "djangoTemplateExtension.enableFormatting": {
          "type": "boolean",
          "default": true,
          "description": "Enable formatting for files in template folders"
        },
        "djangoTemplateExtension.templateFolderNames": {
          "type": "array",
          "default": [
            "templates",
            "template"
          ],
          "description": "Folder names to be recognized as template folders"
        },
        "djangoTemplateExtension.autoDetectPythonProject": {
          "type": "boolean",
          "default": true,
          "description": "Only activate formatting when inside a Python project"
        },
        "djangoTemplateExtension.wrapDjangoTagsInComments": {
          "type": "boolean",
          "default": true,
          "description": "Auto wrap Django tags with /* */ on open and unwrap on save for TypeScript/JavaScript files"
        }
      }
    }
  },
  "description": "Syntax highlighting and formatting for Django/Jinja template files",
  "dependencies": {
    "@prettier/plugin-xml": "^3.4.2",
    "prettier": "^3.7.4"
  },
  "devDependencies": {
    "@types/node": "^20.4.2",
    "@types/vscode": "^1.78.0",
    "release-please": "^17.1.3",
    "typescript": "^5.9.3"
  }
}
